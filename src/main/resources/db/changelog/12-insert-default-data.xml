<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- Insérer des données par défaut dans classe -->
    <changeSet id="012-insert-default-classes" author="ecole">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM classe</sqlCheck>
        </preConditions>
        <insert tableName="classe">
            <column name="nom" value="1ère"/>
            <column name="description" value="Première année du secondaire"/>
        </insert>
        <insert tableName="classe">
            <column name="nom" value="2ème"/>
            <column name="description" value="Deuxième année du secondaire"/>
        </insert>
        <insert tableName="classe">
            <column name="nom" value="3ème"/>
            <column name="description" value="Troisième année du secondaire"/>
        </insert>
        <insert tableName="classe">
            <column name="nom" value="4ème"/>
            <column name="description" value="Quatrième année du secondaire"/>
        </insert>
        <insert tableName="classe">
            <column name="nom" value="5ème"/>
            <column name="description" value="Cinquième année du secondaire"/>
        </insert>
        <insert tableName="classe">
            <column name="nom" value="6ème"/>
            <column name="description" value="Sixième année du secondaire"/>
        </insert>
    </changeSet>

    <!-- Insérer une école par défaut -->
    <changeSet id="012-insert-default-ecole" author="ecole">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM ecole</sqlCheck>
        </preConditions>
        <insert tableName="ecole">
            <column name="nom_ecole" value="École Secondaire"/>
            <column name="code_ecole" value="ECOLE001"/>
            <column name="ville" value="Kinshasa"/>
            <column name="commune_territoire" value="Gombe"/>
            <column name="adresse" value="Avenue de la Paix"/>
        </insert>
    </changeSet>

</databaseChangeLog>
