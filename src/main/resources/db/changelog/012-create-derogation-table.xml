<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-create-derogation-table" author="system">
        <createTable tableName="derogation">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="eleve_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_derogation_eleve" references="eleve(id)"/>
            </column>
            <column name="motif_paiement_id" type="BIGINT">
                <constraints foreignKeyName="fk_derogation_motif" references="motif_paiement(id)"/>
            </column>
            <column name="motif" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="statut" type="VARCHAR(50)" defaultValue="EN_ATTENTE">
                <constraints nullable="false"/>
            </column>
            <column name="date_demande" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="date_acceptation" type="TIMESTAMP"/>
            <column name="date_expiration" type="TIMESTAMP"/>
            <column name="date_refus" type="TIMESTAMP"/>
            <column name="raison_refus" type="VARCHAR(500)"/>
            <column name="accordee_par" type="VARCHAR(100)"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="est_expiree" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="date_creation" type="TIMESTAMP"/>
            <column name="date_maj" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
