<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="008-create-conduite-table" author="system">
        <createTable tableName="conduite">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="eleve_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_conduite_eleve" references="eleve(id)"/>
            </column>
            <column name="professeur_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_conduite_professeur" references="utilisateur(id)"/>
            </column>
            <column name="type_conduite" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="periode" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="commentaire" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
