<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-create-suivi-paiement-table" author="system">
        <createTable tableName="suivi_paiement">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="eleve_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_suivi_paiement_eleve" references="eleve(id)"/>
            </column>
            <column name="motif_paiement_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_suivi_paiement_motif" references="motif_paiement(id)"/>
            </column>
            <column name="montant_a_payer" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="montant_paye" type="DECIMAL(10,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="montant_restant" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="statut_paiement" type="VARCHAR(50)" defaultValue="NON_PAYE">
                <constraints nullable="false"/>
            </column>
            <column name="est_en_ordre" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="date_dernier_paiement" type="TIMESTAMP"/>
            <column name="date_creation" type="TIMESTAMP"/>
            <column name="date_maj" type="TIMESTAMP"/>
        </createTable>
        
        <addUniqueConstraint 
            tableName="suivi_paiement" 
            columnNames="eleve_id, motif_paiement_id" 
            constraintName="uk_suivi_paiement_eleve_motif"/>
    </changeSet>

</databaseChangeLog>
