<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-eleve-table" author="system">
        <createTable tableName="eleve">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="postnom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="prenom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="sexe" type="VARCHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column name="date_naissance" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="lieu_naissance" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="numero_permanent" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="classe_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_eleve_classe" references="classe(id)"/>
            </column>
            <column name="ecole_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_eleve_ecole" references="ecole(id)"/>
            </column>
            <column name="code" type="VARCHAR(50)"/>
            <column name="ville" type="VARCHAR(100)"/>
            <column name="commune_territoire" type="VARCHAR(100)"/>
            <column name="statut_paiement_global" type="VARCHAR(20)" defaultValue="NON_EN_ORDRE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
